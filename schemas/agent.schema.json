{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Entry Schema",
  "type": "object",
  "required": [
    "name",
    "slug",
    "description",
    "repository",
    "stars",
    "category"
  ],
  "properties": {
    "name": { // Human-readable name of the agent project
      "type": "string"
    },
    "slug": { // URL-safe identifier (e.g., kebab-case)
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "description": { // Short summary of what the agent does
      "type": "string"
    },
    "purpose": { // High-level purpose of this agent
      "type": "string"
    },
    "repository": { // GitHub repository URL
      "type": "string",
      "format": "uri"
    },
    "stars": { // GitHub stars, minimum required for inclusion
      "type": "integer",
      "minimum": 50
    },
    "category": { // One main category defining the agent's domain
      "type": "string",
      "enum": [
        "commerce",
        "payment-and-finance",
        "productivity",
        "education",
        "infra-tools",
        "meta-agents",
        "writing",
        "research-and-analysis",
        "lifestyle",
        "programming",
        "art",
        "iot",
        "data-visualization",
        "social-media",
        "gaming",
        "workflow-automation",
        "marketing",
        "communication",
        "experimental"
      ]
    },
    "originator": { // Creator name or organization
      "type": "string"
    },
    "principle": { // How it works or what tech it builds on
      "type": "string"
    },
    "stack": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [] // Default to empty array
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [] // User-defined labels
    },
    "reusability": {
      "type": "string" // Notes on composability, plug-and-play, API support etc.
    },
    "limitations": {
      "type": "string" // Known issues, coverage limits, or usage scope
    },
    "status": {
      "type": "string",
      "enum": [
        "alpha",
        "beta",
        "production"
      ],
      "default": "experimental" // Conservative assumption
    },
    "open_source": {
      "type": "boolean",
      "default": false // Only true if LICENSE is clearly found or declared
    },
    "license": {
      "type": "string" // E.g., MIT, Apache-2.0
    },
    "demo_links": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "default": [] // Optional demo page or sandbox
    },
    "last_updated": {
      "type": "string",
      "format": "date" // e.g., "2024-12-01"
    },
    "language": {
      "type": "string" // Main programming language
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [] // Supported runtime or OS
    }
  }
}
